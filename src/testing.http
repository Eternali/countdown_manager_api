# Get the number of countdowns a user has
GET {{host}}/numcd
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{

}

###

# Insert a countdown
POST {{host}}/cd
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "id": "124",
  "owner": "test@me.com",
  "name": "testing",
  "gradient": ["purple", "green"],
  "date": "1540871378369"
}

###

# Get a countdown
GET {{host}}/cd?id=124
Content-Type: application/json
Authorization: Bearer {{auth_token}}

###

# Update a countdown
PATCH {{host}}/cd
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "id": "124",
  "owner": "test@me.com",
  "name": "not testing",
  "gradient": ["purple", "green"],
  "date": "1540871378369"
}

###

# Delete a countdown
DELETE {{host}}/cd
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "id": "124"
}

